<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.handoff.signin.LoginActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        tools:scaleType="centerCrop"
        tools:src="@drawable/background_login"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/logoView"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"
                android:transitionName="logo"/>

            <EditText
                android:id="@+id/email"
                style="@style/InputField.Login"
                android:layout_marginTop="24dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:text="test@email.com"/>

            <EditText
                android:id="@+id/password"
                style="@style/InputField.Login"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword"
                android:text="password"/>

            <Button
                android:id="@+id/restoreButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-normal"
                android:onClick="onClickRestore"
                android:text="Forgot Password?"
                android:textAllCaps="false"
                android:textColor="#84000000"
                android:textSize="15sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp">

                <Button
                    android:id="@+id/signInButton"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:onClick="onClickSubmit"
                    android:text="Log In"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:transitionName="button"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>